@page
@model Bloggie.Web.Pages.Admin.BlogPosts.ListModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-2">
    <div class="container">
        <h1>Blog Posts</h1>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Heading</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var blogPost in Model.BlogPosts)
            {
                <tr>
                    <td>@blogPost.Id</td>
                    <td>@blogPost.Heading</td>
                    <td><a href="/admin/blogposts/edit/@blogPost.Id">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>